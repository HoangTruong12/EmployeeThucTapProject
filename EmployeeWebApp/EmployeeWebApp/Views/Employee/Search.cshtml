@model IEnumerable<EmployeeWebApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>

</div>
<h1>Danh sách nhân viên sau khi tìm kiếm</h1>

<p>
    <a class="btn btn-success" asp-action="Index">Trở về danh sách nhân viên</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                Mã
            </th>
            <th>
                Tài khoản
            </th>
            <th>
                Email
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
               Số điện thoại
            </th>
            <th>
                Thời gian tạo 
            </th>
            <th>
               Thời gian cập nhật
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.ActionLink("", "Edit", new {  id=item.Id  }, new {@class= "btn btn-info fa fa-pencil"}) |
                @Html.ActionLink("", "Details", new {  id=item.Id}, new {@class= "btn btn-info fa fa-eye"}) |
                @Html.ActionLink("", "Delete", new {  id=item.Id}, new {@class= "btn btn-info fa fa-xmark"})
            </td>
        </tr>
}
    </tbody>
</table>
