@model EmployeeWebApp.Models.UserInfo
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="account text-center">
            <form asp-action="LoginUser" asp-controller="Home">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h3 class="mt-3">ĐĂNG NHẬP</h3>
                 <label style="color:red;">@TempData["Message"]</label>
                <div>
                    <input type="text" asp-for="Username" name="Username" class="mb-1 form-control d-inline-block" placeholder="Username" required>
                    <br>
                    <input type="password" asp-for="Password" name="Password" class="mb-1 form-control d-inline-block" placeholder="Password" required>
                </div>
                <div class="btn-submit">
                    <button class="btn btn-outline-primary mt-2" type="submit" value="Login">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>






